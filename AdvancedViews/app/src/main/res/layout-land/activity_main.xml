<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:visibility="gone"/>


    <ListView android:id="@+id/listView"
        android:layout_width="264dp"
        android:layout_height="fill_parent" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="@string/textViewName"
        android:id="@+id/textViewName"
        android:layout_alignTop="@+id/listView"
        android:layout_toEndOf="@+id/listView"
        android:layout_toRightOf="@id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="@string/textViewStadium"
        android:id="@+id/textViewStadium"
        android:layout_below="@+id/textViewName"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="@string/textViewState"
        android:id="@+id/textViewState"
        android:layout_below="@+id/textViewStadium"
        android:layout_alignLeft="@+id/textViewStadium"
        android:layout_alignStart="@+id/textViewStadium"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>
